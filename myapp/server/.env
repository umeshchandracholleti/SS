# Environment
NODE_ENV=development

# Server
PORT=4000

# Database Configuration
# Replace with your PostgreSQL connection details
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/myapp
DB_HOST=localhost
DB_PORT=5432
DB_NAME=myapp
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Configuration
# Generate a secure random string for production (at least 32 characters)
JWT_SECRET=dev-secret-key-change-this-in-production-32chars
JWT_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=dev-session-secret-change-this-in-production

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# Upload Directory
UPLOAD_DIR=uploads

# Email Configuration (Optional - for order confirmations)
# Create app-specific password at: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=Sai Scientifics <your-email@gmail.com>

# Payment Gateway (Optional - Razorpay)
# Get test keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_secret

# WhatsApp Notifications (Optional - Twilio)
# Sign up at: https://www.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886

# Company Information (for invoices and emails)
COMPANY_NAME=Sai Scientifics
COMPANY_EMAIL=sales@saiscientifics.com
COMPANY_PHONE=+91 918275568
COMPANY_GSTIN=your-gstin-number

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173
