# Production Environment Configuration
# Copy this to .env and fill in your actual values

NODE_ENV=production
PORT=4000

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://postgres:yourSecurePassword@postgres:5432/myapp
DB_MAX_CONNECTIONS=20
DATABASE_LOG=false

# JWT Configuration
JWT_SECRET=your-very-long-random-secret-key-generate-with-openssl-rand-base64-32
JWT_EXPIRY=7

# Bcrypt Configuration
BCRYPT_ROUNDS=10

# Razorpay Configuration (Production Keys)
RAZORPAY_KEY_ID=rzp_live_your_production_key_id
RAZORPAY_KEY_SECRET=your_production_secret_key

# Email Service Configuration (Gmail or SendGrid)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@saiscientifics.com

# SMS/WhatsApp Service Configuration (Twilio)
SMS_TWILIO_ACCOUNT_SID=ACyour_account_sid_here
SMS_TWILIO_AUTH_TOKEN=your_auth_token_here
SMS_TWILIO_PHONE=+91your_twilio_number

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_PATH=/app/logs
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=https://saiscientifics.com
CORS_CREDENTIALS=true

# Session Configuration
SESSION_SECRET=your-session-secret-key-for-cookies

# Optional: Error Tracking (Sentry)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Optional: APM Monitoring (New Relic)
NEW_RELIC_LICENSE_KEY=your-new-relic-key
NEW_RELIC_APP_NAME=Sai Scientifics API

# Optional: Cloud Storage (AWS S3)
AWS_REGION=ap-south-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=saiscientifics-uploads

# Optional: Payment Webhook Security
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret-key

# Optional: Admin Email for Alerts
ADMIN_EMAIL=admin@saiscientifics.com

# Optional: Encryption Key for Sensitive Data
ENCRYPTION_KEY=your-256-bit-encryption-key-in-base64

# Optional: Redis Configuration (for caching)
REDIS_URL=redis://:password@redis:6379/0
REDIS_MAX_RETRIES=3

# Optional: Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
