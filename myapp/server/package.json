{
  "name": "myapp-api",
  "private": true,
  "version": "1.0.0",
  "type": "commonjs",
  "description": "Sai Scientifics E-commerce API with Payment and Notifications",
  "author": "Your Team",
  "license": "MIT",
  "scripts": {
    "dev": "node --watch src/index.js",
    "start": "node src/index.js",
    "db:init": "node scripts/init-db.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "node scripts/test-phase4-5.js",
    "lint": "eslint src/",
    "build": "echo 'Build complete'",
    "migrate": "echo 'Migration skipped in production'",
    "analyze-queries": "node scripts/analyze-queries.js",
    "add-indexes": "node scripts/add-indexes.js"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": ["/node_modules/"],
    "testMatch": ["**/tests/**/*.test.js"],
    "collectCoverageFrom": ["src/**/*.js"],
    "coverageThresholds": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    }
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^8.0.1",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.5",
    "razorpay": "^2.9.6",
    "twilio": "^5.12.2",
    "validator": "^13.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
